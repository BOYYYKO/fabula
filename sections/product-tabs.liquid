},
{
"type": "collection",
"id": "collection",
"label": "t:sections.featured-collection.settings.collection.label"
}

],
"blocks": [
{
"type": "collection",
"name": "collections",
"settings": [
{
"type": "collection",
"id": "collection",
"label": "Collection"
}
]
}
],
"presets": [
{
"category": "product-tabs",
"name": "product-tabs"
}
]
}
{% endschema %}