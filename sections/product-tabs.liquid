<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
    const swiper = new Swiper('.swiper', {
        loop: false,
        speed: 500,
        slidesPerView: 'auto',
        slidesPerGroup: 1,
        effect: 'slider',
        grabCursor: true,
        longSwipes: false,
        centeredSlides: false,

        autoplay: {
            delay: 3000,
        },
        breakpoints: {
            0: {
                enabled: true
            },
            578: {
                enabled: false
            },
        }
    });
</script>

